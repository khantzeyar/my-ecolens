generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CampSite {
  id          Int      @id @default(autoincrement())
  type        String
  name        String
  latitude    Float
  longitude   Float
  state       String

  // CSV: address
  address     String   @default("")
  // CSV: tel
  phone       String   @default("")
  // CSV: url
  website     String   @default("")
  // CSV: information
  description String   @default("")
  // CSV: opening_hours
  openingTime String   @default("")
  // CSV: fee
  fees        String[] @db.Text
  // CSV: attractions
  tags        String[] @db.Text
  // CSV: enquiries
  contact     String   @default("")
  // CSV
  image       String   @default("")
}
